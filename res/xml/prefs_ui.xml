<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/header_statusbar">

        <Preference
            android:key="transparency_dialog"
            android:title="@string/transparency_dialog_title" />
    
        <CheckBoxPreference
            android:key="statusbar_hidden"
            android:title="@string/statusbar_hide_title"
            android:summary="@string/statusbar_hide_summary" />

        <CheckBoxPreference
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_toggle_brightness"
            android:summary="@string/status_bar_toggle_brightness_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="status_bar_notif_count"
            android:title="@string/status_bar_notif_count_title"
            android:summary="@string/status_bar_notif_count_summary"
            android:defaultValue="false" />

        <ListPreference
            android:key="status_bar_max_notifications"
            android:dialogTitle="@string/status_bar_max_notifications_title"
            android:title="@string/status_bar_max_notifications_title"
            android:summary="@string/status_bar_max_notifications_summary"
            android:entries="@array/entries_status_bar_max_notifications"
            android:entryValues="@array/values_status_bar_max_notifications" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification"
        android:title="@string/notification_cat">

        <ListPreference
	        android:key="notification_wallpaper"
	        android:persistent="false"
	        android:dialogTitle="@string/notification_wallpaper_title"
	        android:title="@string/notification_wallpaper_title"
	        android:entries="@array/notification_background_entries"
	        android:entryValues="@array/notification_background_values" />

        <Preference
            android:key="notification_wallpaper_alpha"
            android:title="@string/notif_wallpaper_alpha_title" />

        <com.aokp.romcontrol.widgets.SeekBarPreference
            android:key="notification_alpha"
            android:title="@string/notif_alpha_title" />

        <CheckBoxPreference
            android:key="notification_shade_dim"
            android:title="@string/notification_shade_dim_title"
            android:summary="@string/notification_shade_dim_summary" />

        <Preference
            android:key="custom_carrier_label"
            android:title="@string/custom_carrier_label_title" />

        <CheckBoxPreference
            android:key="vibrate_notif_expand"
            android:title="@string/vibrate_notif_expand_title"
            android:summary="@string/vibrate_notif_expand_summary" />

        <CheckBoxPreference
            android:key="recent_kill_all"
            android:title="@string/recent_kill_all"
            android:summary="@string/recent_kill_all_summary" />

        <CheckBoxPreference
            android:key="ram_usage_bar"
            android:title="@string/ram_bar"
            android:summary="@string/ram_bar_summary" />

    </PreferenceCategory>

    <PreferenceCategory
		android:key="tabletUI"
        android:title="@string/tabletUI_cat">

        <ListPreference
            android:key="user_mode_ui"
            android:title="@string/user_mode_ui"
            android:summary="@string/user_mode_ui_summary"
            android:entries="@array/user_mode_ui_entries"
            android:entryValues="@array/user_mode_ui_values" />

    	<Preference
            android:key="lcd_density_setup"
            android:title="@string/lcd_density_title"
            android:summary="@string/lcd_density_summary" />

        <PreferenceScreen
            android:key="dpi_groups"
            android:fragment="com.aokp.romcontrol.fragments.DpiGroups"
            android:title="@string/dpi_groups_title"
            android:summary="@string/dpi_groups_summary" />

       <CheckBoxPreference
            android:key="hide_extras"
            android:title= "@string/hide_extras"
            android:summary= "@string/hide_extras_summary"
            android:defaultValue="false" />

	<CheckBoxPreference
            android:key="force_dualpanel"
            android:title="@string/multipane_ui"
            android:summary="@string/multipane_ui_summary"
            android:defaultValue="false" />

	<CheckBoxPreference
            android:key="show_overflow"
            android:title="@string/show_overflow_title"
            android:summary="@string/show_overflow_summary"
            android:defaultValue="false" />

<!--        <PreferenceScreen
            android:key="system_dpi"
            android:fragment="com.aokp.romcontrol.fragments.DpiPreferences"
            android:title="@string/system_dpi_title"
            android:summary="@string/system_dpi_summary" />-->

    </PreferenceCategory>

     <PreferenceCategory
            android:key="misc"
            android:title="@string/misc_short">

    <!--    <CheckBoxPreference
            android:key="kill_app_longpress_back"
            android:title="@string/kill_app_longpress_back"
            android:summary="@string/kill_app_longpress_back_summary" /> -->

         <CheckBoxPreference
            android:key="rotate_180"
            android:title="@string/rotate_180_title"
            android:summary="@string/rotate_180_summary" />

        <CheckBoxPreference
            android:key="ime_switcher"
            android:title="@string/ime_switcher_title"
            android:summary="@string/ime_switcher_summary"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="wakeup_when_plugged_unplugged"
            android:title="@string/wakeup_when_plugged_unplugged_title"
            android:summary="@string/wakeup_when_plugged_unplugged_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="bootani"
        android:title="@string/bootani_cat">

        <Preference
            android:key="custom_bootanimation"
            android:title="@string/custom_bootanimation_title"
            android:summary="@string/custom_bootanimation_summary" />

        <CheckBoxPreference
            android:key="disable_bootanimation"
            android:title="@string/disable_bootanimation_title" />

        <CheckBoxPreference
            android:key="system_power_crt_screen_off"
            android:summary="@string/system_power_crt_screen_off_summary"
            android:title="@string/system_power_crt_screen_off_title" />

        <CheckBoxPreference
            android:key="system_power_crt_screen_on"
            android:summary="@string/system_power_crt_screen_on_summary"
            android:title="@string/system_power_crt_screen_on_title" />

        <ListPreference
            android:key="pref_low_battery_warning_policy"
            android:title="@string/pref_low_battery_warning_policy_title"
            android:entries="@array/pref_low_battery_warning_policy_entries"
            android:entryValues="@array/pref_low_battery_warning_policy_values"
            android:defaultValue="3" />

    </PreferenceCategory>

</PreferenceScreen>
